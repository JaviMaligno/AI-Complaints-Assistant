# Database (PostgreSQL for production, SQLite for local dev)
# Railway provides DATABASE_URL automatically when you add PostgreSQL
DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"

# For local development with SQLite, use:
# DATABASE_URL="file:./dev.db"
# And change prisma/schema.prisma provider to "sqlite"

# Gemini API (get your free key at https://aistudio.google.com/apikey)
GEMINI_API_KEY="your-gemini-api-key-here"

# App config
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# AI Authority Limits
AI_REFUND_LIMIT=100
AI_DISCOUNT_LIMIT=15
